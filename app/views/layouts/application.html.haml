!!!
%html
  %head
    %title RaffleDrum
    - js = [ 'http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js' ]
    - js << 'http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/jquery-ui.min.js'
    - js << 'application'
    = javascript_include_tag *js
    - css = ['http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/themes/smoothness/jquery-ui.css']
    - css += ['application', 'formtastic', 'formtastic_changes']
    = stylesheet_link_tag *css
  %body
    #container
      = render :partial => 'layouts/header'
      #flash= flash[:notice]
      #middle= yield
      #footer
        &copy;
        = link_to 'Rails Rumble', 'http://www.railsrumble.com', :target => '_blank'
        2009 Solo Team #041:
        = link_to '@eugenebolshakov', twitter_user_url('eugenebolshakov')
        \/
        = link_to 'www.taknado.com', 'http://www.taknado.com'
